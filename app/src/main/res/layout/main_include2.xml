<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="WEATHER APP"
            android:background="@android:color/holo_green_light"
            android:id="@+id/toolbar"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/holo_green_dark"
            app:helperTextTextColor="@android:color/holo_green_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delhi,IN"
                android:drawableEnd="@drawable/ic_search_black"
                android:textColor="@android:color/holo_orange_dark"
                android:id="@+id/et2"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"
            app:cornerRadius="20dp"
            android:id="@+id/btnSearch1"
            android:background="@android:color/holo_green_light"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:itemCount="5"
            android:id="@+id/next16Rv"/>

    </LinearLayout>



</ScrollView>
